import socket
import serial
import sys
import struct

class servoStruct; ##Example: Set (state) velocity (command) 3 (ID) 50 (amount)
{
_pack_ = 1
int ID
String command
int amount
String state 
}

sock = socket.socket(socket.AF_INET, socket.SOCK_STREAM)

server_address = ('', 10000)
sock.bind(server_address)

sock.listen(1)

connection, clientAddress = sock.accept()
ser = serial.Serial("/dev/ttyACM0", 9600)


while True:

	message = raw_input("Enter servo commands here: ")
	command = connection.recv(5);
	command.replace(" ", "\x"); //Next two characters are interpreted as hex digits
	
	ser.write(command) //

connection.close();
	
	
	
